<?xml version="1.0" encoding="utf-8"?>
<scene>
	<integrator type="path"/>
	
	<sampler type="independent">
		<integer name="sampleCount" value="64"/>
	</sampler>
    
	<camera type="perspective">
		<transform name="toWorld">
			<scale value="-1,1,1"/>
			<lookat origin="0, 1, 3.41" target="0, 1, 0" up="0, 1, 0"/>
		</transform>
		<float name="fov" value="45"/>
		<integer name="width" value="512"/>
		<integer name="height" value="512"/>
	</camera>
    
    <!-- bottom floor -->
    <mesh type="obj">
        <string name="filename" value="plane.obj"/>
        <bsdf type="diffuse">
            <color name="albedo" value="0.255,0.255,0"/>
        </bsdf>
    </mesh>
    
    <!-- right wall -->
    <mesh type="obj">
        <string name="filename" value="plane.obj"/>
        <transform name="toWorld">
            <rotate axis="0, 0, 1" angle="90"/>
            <translate value="1, 1, 0"/>
        </transform>
        <bsdf type="diffuse">
            <color name="albedo" value="0.255,0.255,0"/>
        </bsdf>
    </mesh>
    
    <!-- back wall -->
    <mesh type="obj">
        <string name="filename" value="plane.obj"/>
        <transform name="toWorld">
            <rotate axis="1, 0, 0" angle="90"/>
            <translate value="0, 1, -1"/>
        </transform>
        <bsdf type="diffuse">
             <color name="albedo" value="0.1,0.1,1"/>
        </bsdf>
    </mesh>
    
    <!-- top ceiling -->
    <mesh type="obj">
        <string name="filename" value="plane.obj"/>
        <transform name="toWorld">
            <rotate axis="1, 0, 0" angle="180"/>
            <translate value="0, 2, 0"/>
        </transform>
        <bsdf type="diffuse">
            <color name="albedo" value="0.255,0.255,0"/>
        </bsdf>
    </mesh>
    
    <!-- light -->
	<mesh type="obj">
		<string name="filename" value="sphere.obj"/>
        <transform name="toWorld">
            <scale value="0.1, 0.1, 0.1"/>
            <translate value="0, 1.98, 0"/>
        </transform>
		<luminaire type="area">
			<color name="radiance" value="20, 30, 12"/>
		</luminaire>
		<bsdf type="diffuse">
			<color name="albedo" value="0, 0, 0"/>
		</bsdf>
        
	</mesh>
    
	<!-- mirror -->
    <mesh type="obj">
		<string name="filename" value="plane.obj"/>
		<transform name = "toWorld">
            <rotate axis="0, 0, 1" angle="-90"/>
            <translate value="-1, 1, 0"/>
		</transform>
		<bsdf type="dielectric">
            <float name="eta_i" value="1"/>
			<float name="eta_t" value="5"/>
			<color name="color" value="0.5,0.5,0.5"/>
		</bsdf>
	</mesh>
	
